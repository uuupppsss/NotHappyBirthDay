    {
        message = name+"!"+" "+firstparts[random.Next(4)] + " " + secondparts[random.Next(4)] + " " + thirdparts[random.Next(4)] + " " + fourthparts[random.Next(4)] + " " + fifthparts[random.Next(4)] + " " + sixthparts[random.Next(4)] + " " + ends[random.Next(4)] ;
